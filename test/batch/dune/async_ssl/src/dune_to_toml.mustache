{{#rule}}
[[rule]]
targets = "{{targets}}"
deps    = {{#deps}}{{.}}, {{/deps}}
action  = {{#action}}{{#bash}}"bash {{&bash}}"{{/bash}}{{/action}}
[deps]
{{#deps}}{{#.*}}{{*}}: {{.}}{{/.*}} {{/deps}}

{{/rule}}

{{#library}}
[[library]]
name        = "{{name}}"
public_name = "{{public_name}}"
modules     = {{#modules}}{{.}}{{?}}, {{/?}}{{/modules}}
c_names     = {{c_names}}

flags       = {{flags}}

c_flags     = {{#c_flags}}{{.}}{{?}}, {{/?}}{{/c_flags}}

c_library_flags = {{c_library_flags}}

libraries = {{#libraries}}{{.}}{{?}} {{/?}}{{/libraries}}

[preprocess]
{{#preprocess}}
  {{#pps}}{{^}}pps {{/^}}{{.}}{{?}}, {{/?}}{{$}}{{/$}}{{/pps}}
{{/preprocess}}

{{/library}}
